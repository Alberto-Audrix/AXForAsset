<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".profile_page">

    <ImageView
        android:id="@+id/menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/menu"/>
    <TextView
        android:id="@+id/homeBtn"
        android:visibility="invisible"
        android:text="Profile"
        android:background="@drawable/custom_menu_home"
        android:textColor="@color/white"
        android:drawableStart="@drawable/home"
        android:paddingStart="20dp"
        android:paddingEnd="80dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/menu"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/itemsBtn"
        android:visibility="invisible"
        android:text="Items"
        android:background="@drawable/custom_menu_items_profile"
        android:textColor="@color/white"
        android:drawableStart="@drawable/item"
        android:paddingStart="20dp"
        android:paddingEnd="80dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/homeBtn"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/profileBtn"
        android:visibility="invisible"
        android:text="Profile"
        android:background="@drawable/custom_menu_items_profile"
        android:textColor="@color/white"
        android:drawableStart="@drawable/profile"
        android:paddingStart="20dp"
        android:paddingEnd="80dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/itemsBtn"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/logOutBtn"
        android:visibility="invisible"
        android:text="Log Out"
        android:background="@drawable/custom_menu_logout"
        android:textColor="@color/white"
        android:drawableStart="@drawable/logout"
        android:paddingStart="20dp"
        android:paddingEnd="80dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/profileBtn"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Hi, [Username]"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/menu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="90dp"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="60dp"
        app:layout_constraintLeft_toRightOf="@id/username"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/menu"
        android:src="@drawable/bronie_profile"/>

    
    <TextView
        android:id="@+id/hiAcc"
        android:layout_width="223dp"
        android:layout_height="29dp"
        android:text="Account Information"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"/>
    <TextView
        android:id="@+id/accEmail"
        android:layout_width="40dp"
        android:layout_height="19dp"
        android:text="Email"
        android:textColor="@color/btn_blue"
        app:layout_constraintTop_toBottomOf="@+id/hiAcc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp" 
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/mailAcc"
        android:layout_width="300dp"
        android:layout_height="19dp"
        android:text="[username]@gmail.com"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/accEmail"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="16dp"/>
    <ImageView
        android:id="@+id/line1"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/mailAcc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/accJob"
        android:layout_width="40dp"
        android:layout_height="19dp"
        android:text="Job"
        android:textColor="@color/btn_blue"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/jobAcc"
        android:layout_width="300dp"
        android:layout_height="19dp"
        android:text="Super Hacker"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/accJob"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="16dp"/>
    <ImageView
        android:id="@+id/line2"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/jobAcc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/accPhone"
        android:layout_width="40dp"
        android:layout_height="19dp"
        android:text="Phone Number"
        android:textColor="@color/btn_blue"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/phoneAcc"
        android:layout_width="300dp"
        android:layout_height="19dp"
        android:text="+62 821-7864-5***"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/accPhone"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="16dp"/>
    <ImageView
        android:id="@+id/line4"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/phoneAcc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"/>


    <TextView
        android:id="@+id/accAdd"
        android:layout_width="40dp"
        android:layout_height="19dp"
        android:text="Address"
        android:textColor="@color/btn_blue"
        app:layout_constraintTop_toBottomOf="@+id/line4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/addAcc"
        android:layout_width="300dp"
        android:layout_height="19dp"
        android:text="Light Bound Street 5100 Street, Arc City"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/accAdd"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        android:textSize="16dp"/>
    <ImageView
        android:id="@+id/line5"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/addAcc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"/>
    


</androidx.constraintlayout.widget.ConstraintLayout>
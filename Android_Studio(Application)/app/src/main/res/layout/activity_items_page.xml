<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    tools:context=".items_page">

    <ImageView
        android:id="@+id/menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/menu"/>
    <TextView
        android:id="@+id/homeBtn"
        android:visibility="invisible"
        android:text="Profile"
        android:background="@drawable/custom_menu_home"
        android:textColor="@color/white"
        android:drawableStart="@drawable/home"
        android:paddingStart="20dp"
        android:paddingEnd="80dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/menu"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/itemsBtn"
        android:visibility="invisible"
        android:text="Items"
        android:background="@drawable/custom_menu_items_profile"
        android:textColor="@color/white"
        android:drawableStart="@drawable/item"
        android:paddingStart="20dp"
        android:paddingEnd="80dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/homeBtn"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/profileBtn"
        android:visibility="invisible"
        android:text="Profile"
        android:background="@drawable/custom_menu_items_profile"
        android:textColor="@color/white"
        android:drawableStart="@drawable/profile"
        android:paddingStart="20dp"
        android:paddingEnd="80dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/itemsBtn"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/logOutBtn"
        android:visibility="invisible"
        android:text="Log Out"
        android:background="@drawable/custom_menu_logout"
        android:textColor="@color/white"
        android:drawableStart="@drawable/logout"
        android:paddingStart="20dp"
        android:paddingEnd="80dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/profileBtn"
        android:layout_marginLeft="25dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
    
    <ScrollView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/deepsea_mako"/>
            <TextView
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Deep Sea Mako"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="260dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Who knows that mako shark on the deep sea have more scarier face than the most common ones? with their teeth that look like jagged saws, they are ready to find their prey"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/mako"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="View Details"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:backgroundTint="@color/btn_blue"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/nick"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Nick"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="260dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Nick is one of the most famous professional diver for handling sharks, however he lost one of his arm to a tiger shark. After losing his left arm and replace it with robotic hand he is ready to hunt the sharks once again"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/nick"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="View Details"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:backgroundTint="@color/btn_blue"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/mhs2_asset"/>
            <TextView
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Red Dragon Scale"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="260dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Get yourself cool skin for your rider to accompany you during your adventure"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/mhs2"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="View Details"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:backgroundTint="@color/btn_blue"/>


            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/summer_garchomp"/>
            <TextView
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Summer Garchomp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="260dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="What can be more menacing than lifeguard garchomp? Get yourself one now to prove your beloved garchomp is the best lifeguard"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/pokemon"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="View Details"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:backgroundTint="@color/btn_blue"/>


            <ImageView
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/lightborn_skin_set_ml"/>
            <TextView
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Lightborn Skin Set"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="260dp"
                android:layout_height="120dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Join the lightborn to exterminate abyss. Buy this bundle to get all lightborn skins"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/lightborn"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:text="View Details"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:backgroundTint="@color/btn_blue"/>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>